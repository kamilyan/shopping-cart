<%- include('../partials/adminheader') %>

<h2 class="page-title">Add a page</h2>
<a href="/admin" class="btn btn-primary">Back</a>

<form action="/admin/add" method="POST">
    <div class="form-group">
        <label for="title">Title</label>
        <input id="title" type="text" class="form-control" name="title" value="<%= title %>">
    </div>
    <div class="form-group">
        <label for="slug">Slug</label>
        <input id="slug" type="text" class="form-control" name="slug" value="<%= slug %>">
    </div>
    <div class="form-group">
        <label for="content">Content</label>
        <textarea id="content" class="form-control" name="content" cols="30" rows="10"><%=  content %></textarea>
    </div>

    <button class="btn btn-default">Submit</button>
</form>

<%- include('../partials/adminfooter') %>